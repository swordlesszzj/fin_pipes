{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "fin_pipes",
			"command": "g++",
			"args": [
				"-fdiagnostics-color=always",
				"-std=c++17",
				"-g",
				"fin_pipes.cpp",
				"-o",
				"fin_pipes"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			
		}
	]
}